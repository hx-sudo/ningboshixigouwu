<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    中心内容：上面内容随下面按钮改变-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--上部内容-->

<!--下部按钮-->
        <RadioGroup
            android:id="@+id/main_rg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_rb1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/main_rb1"
                android:checked="true"
                android:textColor="@drawable/main_txt"
                android:text="首页"
                android:textSize="12sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/main_rb2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/main_rb2"
                android:textColor="@drawable/main_txt"
                android:text="分类"
                android:textSize="12sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/main_rb3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/main_rb3"
                android:textColor="@drawable/main_txt"
                android:text="我的"
                android:textSize="12sp">

            </RadioButton>

        </RadioGroup>

        <TextView
            android:id="@+id/main_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nav_fouces"
            android:layout_above="@+id/main_rg"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/main_line"
            android:orientation="vertical"
            />
    </RelativeLayout>


    <!--    左边侧滑动抽屉-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>